{% extends "::base.html.twig" %}

{% block container %}
    <div class="row">
        <div class="col-md-3 sidebar">
            <div class="sidebar-module">
                <div class="sidebar-user" ng-controller="UserController">
                    {% verbatim %}
                    <div class="user-photo left" ng-if="user.photo">{{ user.photo }}</div>
                    <div class="user-name left">{{ user.name }}<br />{{ user.surname }}</div>
                    <div class="clear"></div>
                    {% endverbatim %}
                </div>
            </div>
            <div class="sidebar-module" ng-controller="MainController">
                <ol class="nav user">
                    <li><a href="#user"><img src="{{ asset('bundles/nfqfairytalefrontend/ico-check.png') }}">Dabar skaitau</a></li>
                    <li><a href="#"><img src="{{ asset('bundles/nfqfairytalefrontend/ico-clock.png') }}">Rezervuotos knygos</a></li>
                    <li><a href="#"><img src="{{ asset('bundles/nfqfairytalefrontend/ico-pencil.png') }}">Pasiųlyti knygą</a></li>
                </ol>
            </div>
            <div class="sidebar-module">
                <div class="sidebar-header">SRITYS</div>
                <ol class="nav">
                    <li>Populiariausios</li>
                    <li>Naujos</li>
                    <li>Visos</li>
                </ol>
            </div>
            <hr>
            <div class="sidebar-module categories" ng-controller="CategoriesController">
                {% verbatim %}
                <ol class="nav" ng-repeat="category in categories">
                    <li>{{ category.title }}</li>
                </ol>
                {% endverbatim %}
            </div>
        </div>
        <div class="col-md-9 content">
            <div class="row header">
                <div class="col-md-4 logo">
                    <img src="{{ asset('bundles/nfqfairytalefrontend/logo.png') }}" class="left">
                    <div class="left"><p>Bi</p><p>blio</p><p>teka</p></div>
                    <div class="clear"></div>
                </div>
                <div class="col-md-8 search">
                    <img src="{{ asset('bundles/nfqfairytalefrontend/ico-search.png') }}">
                    <input type="text" placeholder="Ieškoti knygos">
                </div>
            </div>
            <div ng-view></div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.23/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.23/angular-route.min.js"></script>
    <script src="bundles/nfqfairytalefrontend/scripts/Controller/UserController.js"></script>
    <script src="bundles/nfqfairytalefrontend/scripts/Controller/CategoriesController.js"></script>
    <script src="bundles/nfqfairytalefrontend/scripts/app.js"></script>
    <script>
        var activeUser = {{ activeUser |json_encode |raw }};
    </script>
{% endblock %}
