{% extends "NfqFairytaleFrontendBundle:Default:user-content.html.twig" %}

{% block user_content %}
    {% verbatim %}
    <div class="user-photo left">
        <img ng-if="user.photo" ng-src="{{ user.photo }}">
        <img ng-if="!user.photo" src="/bundles/nfqfairytalefrontend/alien.png">
    </div>
    <div class="user-detail left">
        <p class="email-title">El. paštas:</p>

        <p class="email">{{ user.email }}</p>

        <p class="edit"><img src="bundles/nfqfairytalefrontend/ico-edit.png"> <a href="#user-edit">Keisti
                informaciją</a></p>
    </div>
    <div class="clear"></div>
    <div class="user-read-statistic">
        <p><span>Viso perskaitė:</span>{{ (user.reservations | filter:status:"returned").length }}</p>

        <p><span>Vidutiniškai skaito knygą:</span></p>

        <p><span>Paliko atsiliepimų:</span>{{ user.comments.length }}</p>

        <p><span>Dažniausiai skaito:</span>
            <a href="#/category/{{ (categories | first).id }}">{{ (categories | first).title }}</a></p>
    </div>
    {% endverbatim %}
{% endblock %}
