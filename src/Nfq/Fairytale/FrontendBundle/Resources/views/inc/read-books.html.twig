<div class="col-md-12">
    <p class="block-title">Perskaitytos knygos</p>
    {% verbatim %}
    <div class="book" ng-repeat="book in user.read.books">
        <div class="left image"><img ng-src="book.image"></div>
        <div class="left info">
            <p class="title">{{ book.title }}</p>
            <p class="authors"><span ng-repeat="author in book.authors">{{ author.name }}</span></p>
        </div>
        <div class="right button">
            <a href="#/book/{{ book.id }}">
                <img src="/bundles/nfqfairytalefrontend/ico-gt-round.png">
            </a>
        </div>
        <div class="right detail">
            <p class="rating">Ä®vertinimas: {{ book.rating }} / 5</p>
            <p class="comments">Komentarai: ({{ book.coments.count }})</p>
        </div>
        <div class="clear"></div>
    </div>
    {% endverbatim %}
</div>
